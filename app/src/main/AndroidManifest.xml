<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cf.paradoxie.dizzypassword">

    <!-- android:theme="@style/AppTheme.NoActionBar" -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Base">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN"
                    android:configChanges="orientation|keyboardHidden" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.Register" />
        <activity android:name=".activity.Login" />
        <activity
            android:name=".activity.CreateGestureActivity"
            android:label="@string/title_activity_create_gesture" />
        <activity android:name=".activity.GesturePasswordActivity" />
        <activity android:name=".activity.LookPassWord" />
        <activity android:name=".activity.ConfirmPassword" />
        <activity android:name=".activity.AddSubject"
            android:windowSoftInputMode="adjustPan"></activity>
    </application>

</manifest>
